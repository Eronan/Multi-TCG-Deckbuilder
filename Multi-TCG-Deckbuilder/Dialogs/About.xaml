<Window x:Class="Multi_TCG_Deckbuilder.Dialogs.About"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Multi_TCG_Deckbuilder.Dialogs"
        mc:Ignorable="d"
        Title="About" WindowStyle="ToolWindow" Height="450" Width="450"
        MaxHeight="450" MaxWidth="450" MinHeight="450" MinWidth="450"
        Background="{StaticResource {x:Static SystemColors.ControlBrushKey}}">
    <Grid Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="393*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <ScrollViewer HorizontalScrollBarVisibility="Disabled" Margin="10,10,10,10" Background="{StaticResource {x:Static SystemColors.ControlLightLightBrushKey}}">
            <StackPanel Name="stack_Text" HorizontalAlignment="Stretch" VerticalAlignment="Top" />
        </ScrollViewer>
        <Button x:Name="button_OK" Content="OK" HorizontalAlignment="Center" VerticalAlignment="Center" Height="20" Grid.Row="1" Width="40" 
                IsDefault="True" IsCancel="True"/>
    </Grid>
</Window>
